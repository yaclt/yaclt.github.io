{
	"tasks": {
		"dev": "vite",
		"checks": "deno upgrade; deno fmt --check; deno lint; deno test -A;",
		"dev_with_checks": "deno task checks; deno task dev",
		"build": "tsc -b && vite build",
		"preview": "vite preview"
	},
	"lint": {
		"rules": {
			"tags": [
				"recommended"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"lineWidth": 1000000,
		"exclude": [
			"**/*.svg"
		]
	}
}
