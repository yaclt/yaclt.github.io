{
	"tasks": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview"
	},
	"lint": {
		"rules": {
			"tags": [
				"recommended"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"lineWidth": 1000000,
		"exclude": [
			"**/*.svg"
		]
	},
	"imports": {
		"@std/encoding": "jsr:@std/encoding@^1.0.10"
	}
}
